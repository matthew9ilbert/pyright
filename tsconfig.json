{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./out",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./node_modules/@types", "../pyright-internal/typings"],
        "paths": {
            "pyright-internal/*": [
                "../pyright-internal/src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "**/*.js",
        "../pyright-internal/typings/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "out"
    ]
}
